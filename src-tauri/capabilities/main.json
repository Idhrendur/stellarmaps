{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "main permissions",
  "context": "local",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:scope"
    },
    "dialog:allow-open",
    "dialog:allow-save",
    "webview:allow-internal-toggle-devtools"
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ]
}